{
    "manifest_version": 3,
    "name": "Youtube clip summarizer",
    "description": "An extension to summarize Youtube videos using the transcript",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["http://127.0.0.1:5000/*"],

    "action": {
        "default_title": "summarise this video",
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    }
}
